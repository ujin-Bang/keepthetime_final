<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".EditAppointmentActivity">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="약속 제목"/>

                <EditText
                    android:id="@+id/edtAppointmentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="어떤 약속인가요?"
                    android:singleLine="true"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약속 일시"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtDate"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="약속 일자"
                        android:background="@drawable/light_gray_border_box"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/txtTime"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="약속 시간"
                        android:background="@drawable/light_gray_border_box"
                        android:textColor="@color/black"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출발 장소"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"/>

                <Spinner
                    android:id="@+id/startPlaceSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="참석 인원"
                    android:textColor="@color/black"
                    android:layout_marginTop="15dp"/>

                <Spinner
                    android:id="@+id/attendanceSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"/>




                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="약속 장소"/>

                <EditText
                    android:id="@+id/edtPlaceName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="장소 입력"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.naver.maps.map.MapView
                        android:id="@+id/naverMapView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/txtScrollHelp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAppointmentSave"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="약속 등록"/>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>
