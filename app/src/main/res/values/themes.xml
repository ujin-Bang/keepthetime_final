<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Keepthetime_final" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

<!--        앱 전반의 버튼 테마를 하단의 myCompatButton으로 태그 변경-->
<!--        일반 Button 태그 대신 AppCompatButton으로 태그 변경-->
        <item name="buttonStyle">@style/myCustomBtn</item>
    </style>

    <style name="myCustomBtn" parent="Widget.AppCompat.Button">
<!--        android:backgroundTint를 밝은 회색으로-->
        <item name="backgroundTint">@color/light_gray2</item>

    </style>
</resources>